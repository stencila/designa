{
  "name": "@stencila/style-material",
  "version": "0.1.0",
  "description": "Material Design theme for Stencila components",
  "keywords": [
    "Stencila",
    "material",
    "design",
    "theme"
  ],
  "author": "Alex Ketch <alex@ketch.me>",
  "homepage": "https://stenci.la",
  "license": "Apache-2.0",
  "main": "dist/index.css",
  "directories": {
    "src": "src"
  },
  "style": "./dist/index-material.css",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/style.git"
  },
  "scripts": {
    "start": "parcel ./src/index.pcss",
    "build": "parcel build ./src/index-material.pcss",
    "postcss:build": "postcss ./src/*.css --dir ./dist",
    "postcss:watch": "postcss ./src/*.css --dir ./dist --watch"
  },
  "bugs": {
    "url": "https://github.com/stencila/style/issues"
  },
  "dependencies": {
    "@stencila/style-core": "^0.1.0",
    "postcss": "^7.0.16",
    "postcss-cli": "^6.1.2",
    "postcss-insert": "^1.0.0",
    "tailwindcss": "^1.0.1"
  }
}
