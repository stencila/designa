{
  "name": "@stencila/style-core",
  "version": "0.1.0",
  "description": "The front-end CSS framework for all Stencila projects",
  "keywords": [
    "Stencila",
    "design",
    "CSS",
    "framework"
  ],
  "author": "Alex Ketch <alex@ketch.me>",
  "homepage": "https://stenci.la",
  "license": "Apache-2.0",
  "main": "dist/index.css",
  "files": [
    "dist/",
    "tailwind.config.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/style.git"
  },
  "scripts": {
    "dev": "npm run build:css:watch && parcel ./src/index.css",
    "build": "npm run build:package && npm run build:css",
    "build:watch": "concurrently \"npm run build:package:watch\" \"npm run build:css:watch\"",
    "build:package": "parcel build ./src/*.css -d ./dist --public-url ./",
    "build:package:watch": "parcel watch ./src/*.css -d ./dist --public-url ./",
    "build:css": "postcss ./src/*.css --dir ./dist",
    "build:css:watch": "postcss ./src/*.css --dir ./dist --watch"
  },
  "bugs": {
    "url": "https://github.com/stencila/style/issues"
  },
  "dependencies": {
    "@stencila/brand": "file:../brand"
  },
  "devDependencies": {
    "@abide-community/parcel-plugin-clean-out-dir": "^1.0.0",
    "concurrently": "^4.1.1",
    "parcel-plugin-css-pretransform": "^1.0.0"
  }
}
