{
  "name": "@stencila/components",
  "version": "0.24.0",
  "description": "Stencila Web Components",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "jsnext:main": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/stencila-components/stencila-components.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:watch": "concurrently \"npm run dev\" \"chokidar '../style-*/dist/*.css' -c 'npm run kill; npm run clean && npm run dev'\"",
    "build": "stencil build --docs",
    "dev": "stencil build --dev --watch --docs",
    "kill": "pkill -f \"Stencil: stencila-components\"",
    "clean": "rimraf .stencil",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "prepublishOnly": "node ./scripts/prepare.mjs && npm run build"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "2.3.0",
    "@stencil/core": "2.0.3",
    "@stencil/postcss": "1.0.1",
    "@stencila/schema": "0.45.0",
    "@types/feather-icons": "4.7.0",
    "@types/jest": "26.0.13",
    "@types/pluralize": "0.0.29",
    "@types/puppeteer": "3.0.2",
    "@types/webfontloader": "1.6.32",
    "chokidar-cli": "2.1.0",
    "fp-ts": "2.8.2",
    "jest": "26.4.2",
    "jest-cli": "26.4.2",
    "postcss-custom-properties": "9.1.1",
    "postcss-import": "12.0.1",
    "puppeteer": "5.2.1",
    "tailwindcss": "1.8.6"
  },
  "dependencies": {
    "@codemirror/next": "^0.12.0",
    "@nll/datum": "^3.1.0",
    "@popperjs/core": "^2.4.4",
    "@stencila/executa": "^1.14.0",
    "@stencila/style-material": "0.11.17",
    "@stencila/style-stencila": "0.18.4",
    "animate-presence": "^0.2.1",
    "feather-icons": "^4.28.0",
    "pluralize": "^8.0.0",
    "tocbot": "^4.12.0",
    "webfontloader": "^1.6.28",
    "wretch": "^1.7.2"
  },
  "peerDependencies": {
    "@stencila/schema": "^0.43.0 || ^0.45.0 || ^0.46.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11"
  ]
}
