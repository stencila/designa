{
  "name": "@stencila/components",
  "version": "0.31.1",
  "description": "Stencila Web Components",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "jsnext:main": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/stencila-components/stencila-components.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:watch": "concurrently \"npm run dev\" \"chokidar '../style-*/dist/*.css' -c 'npm run kill; npm run clean && npm run dev'\"",
    "build": "stencil build --docs",
    "dev": "stencil build --dev --watch --docs",
    "kill": "pkill -f \"Stencil: stencila-components\"",
    "clean": "rimraf .stencil",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "prepublishOnly": "node ./scripts/prepare.mjs && npm run build"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "2.3.0",
    "@stencil/core": "2.5.2",
    "@stencil/postcss": "1.0.1",
    "@stencila/schema": "1.4.3",
    "@types/feather-icons": "4.7.0",
    "@types/jest": "26.0.23",
    "@types/plotly.js": "1.54.10",
    "@types/pluralize": "0.0.29",
    "@types/puppeteer": "5.4.3",
    "@types/webfontloader": "1.6.32",
    "chokidar-cli": "2.1.0",
    "fp-ts": "2.10.4",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "postcss-custom-properties": "9.2.0",
    "postcss-import": "12.0.1",
    "puppeteer": "8.0.0",
    "tailwindcss": "1.9.6"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^0.18.0",
    "@codemirror/closebrackets": "^0.18.0",
    "@codemirror/commands": "^0.18.0",
    "@codemirror/comment": "^0.18.0",
    "@codemirror/fold": "^0.18.0",
    "@codemirror/gutter": "^0.18.0",
    "@codemirror/highlight": "^0.18.0",
    "@codemirror/history": "^0.18.0",
    "@codemirror/lang-python": "^0.18.0",
    "@codemirror/legacy-modes": "^0.18.0",
    "@codemirror/panel": "^0.18.1",
    "@codemirror/state": "^0.18.0",
    "@codemirror/stream-parser": "^0.18.0",
    "@codemirror/view": "^0.18.0",
    "@nll/datum": "^3.4.0",
    "@popperjs/core": "^2.7.0",
    "@stencila/executa": "^1.15.7",
    "@stencila/style-material": "0.12.4",
    "@stencila/style-stencila": "0.22.1",
    "animate-presence": "^0.2.1",
    "feather-icons": "^4.28.0",
    "mem": "^8.0.0",
    "pluralize": "^8.0.0",
    "vega": "^5.20.0",
    "vega-embed": "^6.16.0",
    "vega-lite": "^5.0.0",
    "webfontloader": "^1.6.28",
    "wretch": "^1.7.4"
  },
  "peerDependencies": {
    "@stencila/schema": "^1.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11"
  ]
}
