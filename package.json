{
  "name": "@stencila/designa",
  "version": "2.0.0",
  "private": true,
  "description": "Stencila's visual design resources and style guide",
  "main": "index.js",
  "repository": "https://github.com/stencila/style",
  "author": "https://github.com/stencila/style/graphs/contributors",
  "license": "Apache-2.0",
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11"
  ],
  "engines": {
    "node": ">=12.17.0",
    "npm": ">=6.10.0"
  },
  "scripts": {
    "prepare": "lerna bootstrap",
    "dev": "concurrently \"npm run storybook\" \"npm run build:watch\"",
    "build": "lerna run build",
    "build:brand": "lerna run build --scope '@stencila/brand'",
    "build:components": "lerna run build --scope '@stencila/components'",
    "build:styles": "lerna run build --scope '@stencila/style*'",
    "build:watch": "lerna run build:watch --stream --parallel",
    "storybook": "start-storybook -p 9006 -s ./packages/brand/dist,./packages/style-material/dist,./packages/style-stencila/dist,./packages/components/dist",
    "storybook:build": "build-storybook -o docs -s ./packages/brand/dist,./packages/style-material/dist,./packages/style-stencila/dist,./packages/components/dist",
    "test": "lerna run test",
    "chromatic": "chromatic --storybook-build-dir docs"
  },
  "devDependencies": {
    "@babel/core": "7.14.0",
    "@stencila/dev-config": "2.0.7",
    "@stencila/renovate-config": "0.4.1",
    "@storybook/addon-a11y": "6.2.9",
    "@storybook/addon-backgrounds": "6.2.9",
    "@storybook/addon-controls": "6.2.9",
    "@storybook/addon-cssresources": "6.2.9",
    "@storybook/addon-docs": "6.2.9",
    "@storybook/addon-options": "5.3.21",
    "@storybook/addon-storysource": "6.2.9",
    "@storybook/addon-viewport": "6.2.9",
    "@storybook/web-components": "6.2.9",
    "autoprefixer": "9.8.6",
    "babel-loader": "8.2.2",
    "chromatic": "5.8.0",
    "concurrently": "6.0.2",
    "core-js": "3.12.0",
    "eslint": "7.25.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.23.2",
    "filewatcher-webpack-plugin": "1.2.0",
    "globby": "11.0.3",
    "lerna": "4.0.0",
    "lit-html": "1.4.1",
    "parcel-bundler": "1.12.5",
    "postcss-cli": "7.1.2",
    "postcss-custom-properties": "9.2.0",
    "postcss-host": "git+https://git@github.com/vitkarpov/postcss-host.git#fd454f76af0ad8f477154ae84ecb3223c647f0f9",
    "postcss-import": "12.0.1",
    "postcss-import-url": "5.1.0",
    "postcss-mixins": "6.2.3",
    "postcss-modules": "3.2.2",
    "postcss-nested": "4.2.3",
    "postcss-parcel-import": "0.0.2",
    "postcss-url": "8.0.0",
    "storybook-addon-root-attribute": "1.0.2",
    "tailwindcss": "1.9.6",
    "typescript": "4.2.4",
    "write-file-webpack-plugin": "4.5.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "release": {
    "extends": "@stencila/semantic-release-config"
  },
  "renovate": {
    "extends": [
      "@stencila",
      ":pinOnlyDevDependencies"
    ],
    "packageRules": [
      {
        "matchSourceUrlPrefixes": [
          "https://github.com/codemirror/"
        ],
        "groupName": "CodeMirror editor packages"
      }
    ]
  }
}
