{
  "name": "@stencila/style",
  "version": "1.0.0",
  "description": "Stencila's visual design resources and style guide",
  "main": "index.js",
  "repository": "https://github.com/stencila/style",
  "author": "https://github.com/stencila/style/graphs/contributors",
  "license": "Apache-2.0",
  "scripts": {
    "watch": "npm run css-watch",
    "serve": "http-server ./ -a 127.0.0.1 -c-1",
    "build": "npm run css-build",
    "deploy": "npm run css-deploy",
    "css-build": "gulp build",
    "css-watch": "gulp watch",
    "css-postcss": "postcss --use autoprefixer --output dist/css/stencila.css dist/css/stencila.css",
    "css-gzip": "gzip -c dist/css/stencila.css > dist/css/stencila.css.gz",
    "css-deploy": "npm run css-build && npm run css-postcss && npm run css-gzip",
    "storybook": "start-storybook -p 9006 -s ./packages/style-core/dist,./packages/style-material/dist",
    "storybook-build": "build-storybook --static-dir .storybook --static-dir dist --output-dir docs",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.9",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@storybook/addon-a11y": "^5.1.0-rc.0",
    "@storybook/addon-cssresources": "^5.1.0-rc.0",
    "@storybook/html": "^5.1.0-rc.0",
    "autoprefixer": "^9.5.1",
    "babel-loader": "^8.0.6",
    "core-js": "^3.1.2",
    "lerna": "^3.14.1",
    "parcel": "^1.12.3",
    "postcss-cli": "^6.1.2",
    "postcss-custom-properties": "^8.0.10",
    "postcss-import": "^12.0.1",
    "postcss-modules": "^1.4.1",
    "postcss-nested": "^4.1.2",
    "postcss-parcel-import": "0.0.2",
    "sass": "^1.20.1",
    "semantic-release": "^15.13.12",
    "tailwindcss": "^1.0.1",
    "typescript": "^3.4.5"
  },
  "style": "sass/stencila.sass"
}
